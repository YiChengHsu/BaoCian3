<%- include('header') %>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <form class="product-upload"enctype="multipart/form-data" onkeypress="return event.keyCode != 13;">
      <div class="row justify-content-center">
        <h4 class="col-10 mt-5 fw-bold">你今天想賣什麼酷東西呢？</h4>
      </div>
      <div class="row justify-content-center">
        <div class="col-4 text-center">
          <div class="mb-3">
            <label for="formFile" class="form-label">封面照片：</label>
            <input class="form-control" type="file" id="formFile" name="main_image" onchange="showImg(this)" required>
            <img src="../assest/card-image.svg" class="img-thumbnail rounded my-img" alt="" id="img"  accept="image/png image/jpg">
          </div>        
          <div class="row mb-3 justify-content-between">
            <label for="formFile" class="form-label">其他照片：</label>
            <input class="form-control" type="file" id="formFile" name="other_images" onchange="showOtherImg(this)" multiple required>
            <img src="../assest/card-image.svg" alt="" id="img-0" class="img-thumbnail rounded my-other-img">
            <img src="../assest/card-image.svg" alt="" id="img-1" class="img-thumbnail rounded my-other-img">
            <img src="../assest/card-image.svg" alt="" id="img-2" class="img-thumbnail rounded my-other-img">
          </div>
        </div>
        <div class="col-1"></div>
        <div class="col-5 mt-3">
          <div class="row my-option-row px-0">
            <div class="col-4">
              <select class="form-select form-select-lg mb-3 me-5 col-1" aria-label=".form-select-lg " onchange="changeSubCategory(this.value)" name="category" required>
                <option selected>分類</option>
                <option value="men" >男性</option>
                <option value="women" >女性</option>
                <option value="luxury">名牌</option>
                <option value="electronics">3C</option>
                <option value="other">其他</option>
              </select>           
            </div>
            <div class="col-8">
              <select class="form-select form-select-lg mb-3 col-8 my-sub-category" aria-label=".form-select-lg" name="sub_category" required>
                <option selected>請選擇分類</option>
              </select>
            </div>
          </div>
          <div class="form-floating mb-3 fs-5">
            <input type="text" class="form-control" id="floatingInput" name="title" placeholder="請輸入酷東西名稱" required>
            <label for="floatingInput">酷東西名稱</label>
          </div>
          <h3 class="fw-bold">
            關於酷東西 <span class="fs-6 text-danger">(必填)</span>
          </h3>
          <h4 class='mb-3'>新舊程度</h4>
          <div class="row">
            <div class='my-3 fs-6 col'>
              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-1-outlined" checked autocomplete="off" name="condition" value="全新">
                <label class="btn btn-outline-secondary" for="btn-check-1-outlined">全新</label>
              </div>

              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-2-outlined" checked autocomplete="off" name="condition" value="幾乎全新">
                <label class="btn btn-outline-secondary" for="btn-check-2-outlined">幾乎全新</label>
              </div>

              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-3-outlined" checked autocomplete="off" name="condition" value="狀況良好">
                <label class="btn btn-outline-secondary" for="btn-check-3-outlined">狀況良好</label>
              </div>

              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-4-outlined" checked autocomplete="off" name="condition" value="狀況尚可">
                <label class="btn btn-outline-secondary" for="btn-check-4-outlined">狀況尚可</label>
              </div>
            </div>
          </div>
          <h5 class='mb-3'>起標價格</h5>
          <div class="row">
            <div class="input-group mb-3 my-input col">
              <span class="input-group-text fs-6">起標價格NT$</span>
              <input type="text" class="form-control fs-6" placeholder="設定價格" aria-label="Dollar amount (with dot and two decimal places)" name="price" required>
            </div>
            <div class="input-group mb-3 my-input col">
              <span class="input-group-text fs-6">最低增額 NT$</span>
              <input type="text" class="form-control fs-6" placeholder="設定價格" aria-label="Dollar amount (with dot and two decimal places)" name="bid_incr" required>
            </div>
          </div>
          <h5 >結標時間</h5>
          <div class="input-group mb-3 my-input">
            <input type="datetime-local" class="form-control fs-6" placeholder="設定時間" name="end_time" id="my-time-input" step=30>
          </div>
          <h6 class="text-danger text-end">拍賣時間需至少一小時</h6>
          <h5 class='mb-3'>酷東西敘述</h5>
          <div class="mb-3">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" placeholder="描述您所想賣的酷東西，並包含買家可能感興趣的任何細節，用戶們喜歡有故事的酷東西！" name='description' required></textarea>
          </div>
          <h3 class="fw-bold">
            選填資訊
          </h3>
          <div class="row">
            <div class="form-floating mb-3 col">
              <input type="text" class="form-control" id="floatingInput" name="texture" placeholder="請輸入酷東西材質">
              <label class="px-4" for="floatingInput">酷東西材質</label>
            </div>
            <div class="form-floating mb-3 col">
              <input type="text" class="form-control" id="floatingInput" name="place" placeholder="請輸入酷東西名稱">
              <label class="px-4" for="floatingInput">所在地點</label>
            </div>
          </div>
          <div class="row">
            <div class='fs-6 col justify-content-center'>
              <h4 class='mb-3'>購買證明</h4>
              <div class="form-check form-check-inline px-0 mx-0 col-3">
                <input type="radio" class="btn-check" id="btn-check-5-outlined" checked autocomplete="off" name="with_papers" value="保證書">
                <label class="btn btn-outline-secondary" for="btn-check-5-outlined">保證書</label>
              </div>
              <div class="form-check form-check-inline px-0 mx-0 col-3">
                <input type="radio" class="btn-check" id="btn-check-6-outlined" checked autocomplete="off" name="with_papers" value="購買證明">
                <label class="btn btn-outline-secondary" for="btn-check-6-outlined">購買證明</label>
              </div>
              <div class="form-check form-check-inline px-0 mx-0 col-3">
                <input type="radio" class="btn-check" id="btn-check-7-outlined" checked autocomplete="off" name="with_papers" value="無">
                <label class="btn btn-outline-secondary" for="btn-check-7-outlined">無</label>
              </div>
            </div>
            <div class="col">
              <h4 class='mb-3'>原外包裝</h4>
              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-8-outlined" autocomplete="off"  name="original_packaging" value="原外包裝">
                <label class="btn btn-outline-secondary" for="btn-check-8-outlined">原外包裝</label>
              </div>
              <div class="form-check form-check-inline col">
                <input type="radio" class="btn-check" id="btn-check-9-outlined" autocomplete="off"  name="original_packaging" value="無">
                <label class="btn btn-outline-secondary" for="btn-check-9-outlined">無</label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center my-4">
          <button type="click" class="btn-lg btn-warning col-4 upload">上傳</button>
      </div>
    </form>
  </div>
  <script src='../javascript/product_upload.js'></script>
  <link rel=stylesheet type="text/css" href="../css/product_upload.css">
<%- include('footer') %>
